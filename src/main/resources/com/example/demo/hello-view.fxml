<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane onMouseClicked="#handleMouseClick" xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="ubb.scs.map.controller.HelloController">

    <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" minHeight="600.0" minWidth="900.0"
          prefHeight="600.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12"
          xmlns:fx="http://javafx.com/fxml/1">
        <Text fx:id="helloText" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="HELLO, FRIEND!"
              textAlignment="CENTER" wrappingWidth="421.41259765625">
            <font>
                <Font name="AppleMyungjo Regular" size="43.0"/>
            </font>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </Text>
        <Text fx:id="continueText" fill="#5571ff" opacity="0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="PRESS ANYWHERE TO CONTINUE...">
            <font>
                <Font name="Arial Bold Italic" size="15.0"/>
            </font>
        </Text>
    </VBox>
</StackPane>
