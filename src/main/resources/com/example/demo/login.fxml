<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane style="-fx-alignment: center; -fx-padding: 10px; -fx-background-color: fbfbfb;"
           xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ubb.scs.map.controller.LoginController">
    <children>
        <VBox alignment="CENTER" maxHeight="368.0" maxWidth="330.0" minHeight="368.0" minWidth="330.0"
              prefHeight="368.0" prefWidth="330.0" spacing="10.0"
              style="-fx-alignment: top-center; -fx-translate-y: 50%; -fx-spacing: 67; -fx-border-color: lightgray; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 20px 10px 20px 10px; -fx-background-color: f7f7f7; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.3), 10, 0, 0, 4);">
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
                  style="-fx-alignment: top-center; -fx-translate-y: 50%; -fx-spacing: 30;">
                <children>
                    <Text fill="#0a0a0a" text="Welcome Back" textAlignment="CENTER" wrappingWidth="159.5">
                        <font>
                            <Font name="Arial Bold" size="20.0"/>
                        </font>
                    </Text>
                    <Text fill="#6b6b6b" text="Enter your credential to login" textAlignment="CENTER"
                          wrappingWidth="171.54052734375">
                        <font>
                            <Font name="Arial" size="12.0"/>
                        </font>
                    </Text>
                    <TextField fx:id="usernameField" maxHeight="26.0" maxWidth="160.0" minHeight="26.0" minWidth="160.0"
                               prefHeight="26.0" prefWidth="160.0" promptText="Username"/>
                    <PasswordField fx:id="passwordField" maxHeight="26.0" maxWidth="160.0" minHeight="26.0"
                                   minWidth="160.0" prefHeight="26.0" prefWidth="160.0" promptText="Password"/>
                    <Button maxWidth="160.0" minWidth="160.0" mnemonicParsing="false"
                            onAction="#handleConfirmLoginClick" prefWidth="160.0"
                            style="-fx-background-color: #4f3fd3; -fx-background-radius: 12; -fx-text-fill: white;"
                            text="LogIn"/>
                </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <children>
                    <Text fill="#6b6b6b" text="Don't have an account?" textAlignment="CENTER">
                        <font>
                            <Font name="Arial" size="12.0"/>
                        </font>
                    </Text>
                    <Text fx:id="signUpText" fill="#5571ff" onMouseClicked="#handleSignUpClick"
                          onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" text="SignUp"
                          underline="true"/>
                </children>
            </HBox>
        </VBox>
    </children>
</StackPane>
